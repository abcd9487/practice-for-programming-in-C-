#include <stdio.h>
#include <string.h>
int main(){
    int n;
    scanf("%d",&n);
    int ans=n;
    int a=n/3;
    if(n%3==0){
        ans=n-a+1;
        printf("%d\n",ans);
    }else {
        ans=n-a;
        printf("%d\n",ans);
    }
}
//ex 13/3=4...1
//   know that ans=9
//   13-4=9
//   when n%3=0, answer would n-n/3+1 
